	<!-- PLAYING -->
	<state name="playing">
		<event>
			<condition>
				<command name="pause" />
			</condition>
			<action>
                <move x="10" y="415" />
                <pause time="100" />
				<click x="10" y="415" />
				<goto state="paused" />
			</action>
		</event>
    
    </state>
    
	<!-- PAUSED -->
	<state name="paused">
		<event>
			<condition>
				<command name="play" />
			</condition>
			<action>
                <move x="10" y="415" />
                <pause time="100" />
				<click x="10" y="415" />
				<goto state="playing" />
			</action>
		</event> 
	</state>    
    
